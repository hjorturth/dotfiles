[module/battery]
type = internal/battery

; This is useful in case the battery never reports 100% charge
; Default: 100
full-at = 99

; format-low once this charge percentage is reached
; Default: 10
; New in version 3.6.0
low-at = 10

; Use the following command to list batteries and adapters:
; $ ls -1 /sys/class/power_supply/
battery = BAT0
adapter = ADP1

format-discharging = <ramp-capacity> <label-discharging> 

; If an inotify event haven't been reported in this many
; seconds, manually poll for new values.
;
; Needed as a fallback for systems that don't report events
; on sysfs/procfs.
;
; Disable polling by setting the interval to 0.
;
; Default: 5
poll-interval = 5
; Default: %H:%M:%S
time-format = %H:%M
label-discharging = %percentage%% (%time%) %consumption%W
format-discharging-prefix-font = 4
ramp-capacity-foreground = ${colors.foreground}

ramp-capacity-0 = Û∞ÇÉ
ramp-capacity-1 = Û∞Å∫
ramp-capacity-2 = Û∞Åª
ramp-capacity-3 = Û∞Åº
ramp-capacity-4 = Û∞ÅΩ
ramp-capacity-5 = Û∞Åæ
ramp-capacity-6 = Û∞Åø
ramp-capacity-7 = Û∞ÇÄ
ramp-capacity-8 = Û∞ÇÅ
ramp-capacity-9 = Û∞ÇÇ
ramp-capacity-10 = Û∞Åπ


; Only applies if <animation-charging> is used
animation-charging-foreground = ${colors.foreground}

animation-charging-0 = Û∞¢ú
animation-charging-1 = Û∞ÇÜ
animation-charging-2 = Û∞Çá
animation-charging-3 = Û∞Çà
animation-charging-4 = Û∞¢ù
animation-charging-5 = Û∞Çâ
animation-charging-6 = Û∞¢û
animation-charging-7 = Û∞Çä
animation-charging-8 = Û∞Çã
animation-charging-9 = Û∞ÇÖ
animation-charging-10 = Û∞¢ü
; Framerate in milliseconds
animation-charging-framerate = 750
label-charging =  %percentage%% %consumption%W
format-charging = <animation-charging> <label-charging>
label-charging-foreground = ${colors.primary}

; Format used when battery level drops to low-at
; If not defined, format-discharging is used instead.
; Available tags:
;   <label-low>
;   <animation-low>
;   <bar-capacity>
;   <ramp-capacity>
; New in version 3.6.0
format-low-prefix= üîã
format-low-prefix-font = 4
